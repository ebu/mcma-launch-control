{
    "namespace": "ebu",
    "name": "job-repository",
    "provider": "aws",
    "version": "0.0.1",
    "displayName": "Job Repository",
    "description": "The Job Repository is used for submitting and monitoring jobs",
    "inputParameters": [
        {
            "name": "module_prefix",
            "type": "string"
        },
        {
            "name": "stage_name",
            "type": "string"
        },
        {
            "name": "log_group_name",
            "type": "string"
        },
        {
            "name": "aws_account_id",
            "type": "string"
        },
        {
            "name": "aws_region",
            "type": "string"
        },
        {
            "name": "service_registry",
            "type": "object"
        }
    ],
    "outputParameters": [
        {
            "name": "auth_type",
            "type": "string"
        },
        {
            "name": "jobs_url",
            "type": "string"
        }
    ],
    "deploymentActions": [
        {
            "type": "ManagedResource",
            "data": {
                "resourceName": "service",
                "resource": {
                    "@type": "Service",
                    "name": "Job Repository",
                    "resources": [
                        {
                            "@type": "ResourceEndpoint",
                            "resourceType": "AmeJob",
                            "httpEndpoint": "${jobs_url}"
                        },
                        {
                            "@type": "ResourceEndpoint",
                            "resourceType": "AIJob",
                            "httpEndpoint": "${jobs_url}"
                        },
                        {
                            "@type": "ResourceEndpoint",
                            "resourceType": "CaptureJob",
                            "httpEndpoint": "${jobs_url}"
                        },
                        {
                            "@type": "ResourceEndpoint",
                            "resourceType": "QAJob",
                            "httpEndpoint": "${jobs_url}"
                        },
                        {
                            "@type": "ResourceEndpoint",
                            "resourceType": "TransferJob",
                            "httpEndpoint": "${jobs_url}"
                        },
                        {
                            "@type": "ResourceEndpoint",
                            "resourceType": "TransformJob",
                            "httpEndpoint": "${jobs_url}"
                        },
                        {
                            "@type": "ResourceEndpoint",
                            "resourceType": "WorkflowJob",
                            "httpEndpoint": "${jobs_url}"
                        }
                    ],
                    "authType": "${auth_type}"
                }
            }
        }
    ]
}
