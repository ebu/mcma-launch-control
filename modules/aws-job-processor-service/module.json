{
    "namespace": "ebu",
    "name": "aws-job-processor-service",
    "provider": "aws",
    "version": "0.0.1",
    "displayName": "AWS MCMA Job Processor Service",
    "description": "The MCMA Job Processor Service is used for managing the execution of jobs",
    "inputParameters": [
        {
            "name": "module_prefix",
            "type": "string"
        },
        {
            "name": "stage_name",
            "type": "string"
        },
        {
            "name": "log_group_name",
            "type": "string"
        },
        {
            "name": "aws_account_id",
            "type": "string"
        },
        {
            "name": "aws_region",
            "type": "string"
        },
        {
            "name": "service_registry",
            "type": "object"
        }
    ],
    "outputParameters": [
        {
            "name": "auth_type",
            "type": "string"
        },
        {
            "name": "jobs_url",
            "type": "string"
        }
    ],
    "deploymentActions": [
        {
            "type": "ManagedResource",
            "data": {
                "resourceName": "service",
                "resource": {
                    "@type": "Service",
                    "name": "Job Processor Service",
                    "resources": [
                        {
                            "resourceType": "JobProcess",
                            "httpEndpoint": "${job_processes_url}"
                        }
                    ],
                    "authType": "${auth_type}"
                }
            }
        }
    ]
}
